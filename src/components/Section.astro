---
import { cn } from '@/utils'

const { class: className, title, id } = Astro.props
---

<section
  id={id}
  class={cn(
    className,
    'flex flex-col items-center text-center gap-y-6 px-4 md:px-0 max-w-4xl mx-auto overflow-hidden section-stagger'
  )}
>
  <div class="w-full border-t border-border pt-5 -mx-4 md:mx-0 section-item"></div>
  <div class="text-2xl md:text-3xl font-semibold w-full section-item">
    <h2>{title}</h2>
  </div>
  <div class="flex flex-col gap-y-4 w-full md:w-2/3 text-base md:text-lg leading-relaxed section-content">
    <slot />
  </div>
</section>
