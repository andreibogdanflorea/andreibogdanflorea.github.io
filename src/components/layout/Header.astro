<!-- Back to top button -->
<button
	id='backToTop'
	class='fixed bottom-6 right-6 z-50 hidden rounded-full bg-secondary p-3 text-foreground shadow-lg transition-all duration-300 ease-in-out hover:bg-secondary/90 hover:scale-110'
	aria-label='Back to top'
>
	<svg
		xmlns='http://www.w3.org/2000/svg'
		width='20'
		height='20'
		viewBox='0 0 24 24'
		fill='none'
		stroke='currentColor'
		stroke-width='2'
		stroke-linecap='round'
		stroke-linejoin='round'
		class='h-5 w-5'
	>
		<path d='M18 15l-6-6-6 6'/>
	</svg>
</button>

<script>
	function getCurrentTheme() {
		return localStorage.getItem('theme')
	}
	
	function toggleTheme() {
		const toggleDarkModeEvent = new CustomEvent('theme-change', {
			detail: { theme: getCurrentTheme() === 'light' ? 'dark' : 'light' }
		})
		document.dispatchEvent(toggleDarkModeEvent)
	}

	// Desktop theme toggle
	const toggleDarkModeButton = document.getElementById('toggleDarkMode')
	toggleDarkModeButton?.addEventListener('click', toggleTheme)

	// Mobile theme toggle
	const toggleDarkModeMobileButton = document.getElementById('toggleDarkModeMobile')
	toggleDarkModeMobileButton?.addEventListener('click', toggleTheme)

	// Mobile menu toggle
	const mobileMenuToggle = document.getElementById('mobileMenuToggle')
	const mobileMenu = document.getElementById('mobileMenu')

	mobileMenuToggle?.addEventListener('click', () => {
		if (mobileMenu) {
			mobileMenu.classList.toggle('hidden')
		}
	})

	// Close mobile menu when clicking on navigation links
	const mobileNavLinks = mobileMenu?.querySelectorAll('a')
	mobileNavLinks?.forEach(link => {
		link.addEventListener('click', () => {
			if (mobileMenu) {
				mobileMenu.classList.add('hidden')
			}
		})
	})

	// Close mobile menu when clicking outside
	document.addEventListener('click', (event) => {
		if (mobileMenu && !mobileMenu.contains(event.target) && !mobileMenuToggle?.contains(event.target)) {
			mobileMenu.classList.add('hidden')
		}
	})

	// Header scroll effect
	const header = document.getElementById('header')
	const backToTopButton = document.getElementById('backToTop')
	let isScrolled = false

	function updateHeaderOnScroll() {
		const currentScrollY = window.scrollY
		
		if (currentScrollY > 10 && !isScrolled) {
			// Scrolled down
			isScrolled = true
			header?.classList.add('border-b', 'border-border', 'bg-background/80', 'backdrop-blur-md')
			header?.classList.remove('bg-background')
		} else if (currentScrollY <= 10 && isScrolled) {
			// At top
			isScrolled = false
			header?.classList.remove('border-b', 'border-border', 'bg-background/80', 'backdrop-blur-md')
			header?.classList.add('bg-background')
		}

		// Show/hide back to top button
		if (currentScrollY > 300) {
			backToTopButton?.classList.remove('hidden')
		} else {
			backToTopButton?.classList.add('hidden')
		}
	}

	// Back to top functionality
	backToTopButton?.addEventListener('click', () => {
		window.scrollTo({
			top: 0,
			behavior: 'smooth'
		})
	})

	// Initial check
	updateHeaderOnScroll()

	// Listen for scroll events
	window.addEventListener('scroll', updateHeaderOnScroll)
</script>
