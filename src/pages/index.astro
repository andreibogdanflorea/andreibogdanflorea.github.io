<script>
	const texts = [
	"Master's Graduate in Computer Science",
	"Machine Learning Enthusiast",
	"Computer Vision Specialist"
	];

	let textIndex = 0;
	let charIndex = 0;
	let typingSpeed = 100;  // milliseconds
	let pauseBetweenTexts = 1500;  // milliseconds
	let deleting = false;

	const typewriter = document.getElementById("typewriter-text");

	function typeEffect() {
	const currentText = texts[textIndex];

	if (!deleting) {
		typewriter.textContent = currentText.slice(0, ++charIndex);
		if (charIndex === currentText.length) {
		deleting = true;
		setTimeout(typeEffect, pauseBetweenTexts);
		} else {
		setTimeout(typeEffect, typingSpeed);
		}
	} else {
		typewriter.textContent = currentText.slice(0, --charIndex);
		if (charIndex === 0) {
		deleting = false;
		textIndex = (textIndex + 1) % texts.length;
		setTimeout(typeEffect, 500);
		} else {
		setTimeout(typeEffect, 50);
		}
	}
	}

	document.addEventListener("DOMContentLoaded", typeEffect);

	// Scroll animations
	const observerOptions = {
		threshold: 0.1,
		rootMargin: '0px 0px -50px 0px'
	};

	const observer = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('animate');
			}
		});
	}, observerOptions);

	// Section stagger animations observer
	const sectionObserverOptions = {
		threshold: 0.1,
		rootMargin: '0px 0px -50px 0px'
	};

	const sectionObserver = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('animate');
			}
		});
	}, sectionObserverOptions);

	// Timeline section animations observer
	const timelineSectionObserverOptions = {
		threshold: 0.1,
		rootMargin: '0px 0px -50px 0px'
	};

	const timelineSectionObserver = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('animate');
			}
		});
	}, timelineSectionObserverOptions);

	// Timeline item animations observer
	const timelineItemObserverOptions = {
		threshold: 0.3,
		rootMargin: '0px 0px -50px 0px'
	};

	const timelineItemObserver = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('animate');
			}
		});
	}, timelineItemObserverOptions);

	// Skill animations observer
	const skillObserverOptions = {
		threshold: 0.3,
		rootMargin: '0px 0px -50px 0px'
	};

	const skillObserver = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				const skillGroup = entry.target;
				skillGroup.classList.add('animate');
				
				// Animate skill bars
				const skillBars = skillGroup.querySelectorAll('.skill-progress-bar');
				skillBars.forEach((bar, index) => {
					const level = bar.getAttribute('data-skill-level');
					setTimeout(() => {
						bar.style.width = `${level}%`;
					}, index * 150 + 300); // Stagger the bar animations with delay
				});
			}
		});
	}, skillObserverOptions);

	// Observe all scroll-fade-in elements
	document.querySelectorAll('.scroll-fade-in').forEach(el => {
		observer.observe(el);
	});

	// Observe section stagger elements
	document.querySelectorAll('.section-stagger').forEach(el => {
		sectionObserver.observe(el);
	});

	// Observe timeline section stagger elements
	document.querySelectorAll('.timeline-section-stagger').forEach(el => {
		timelineSectionObserver.observe(el);
	});

	// Observe timeline item stagger elements
	document.querySelectorAll('.timeline-item-stagger').forEach(el => {
		timelineItemObserver.observe(el);
	});

	// Observe skill animation groups
	document.querySelectorAll('.skill-animation-group').forEach(el => {
		skillObserver.observe(el);
	});

</script>